@model IEnumerable<ProyectoMPLS.Models.Topologia.Afinidad>

<!-- modal placeholder -->
<div id='afinidad' class='modal fade in'>
    <div id='afinidadContent'></div>
</div>
<!-- another modal placeholder (?) -->
<div id="editarAfinidad" class="modal fade in">
    <h4>Afinidad</h4>
</div>

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="myModalLabel">Lista de Afinidades</h4>
</div>

<div class="modal-body">
    <table class="table table-striped table-bordered" id="tblAfinidades">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.cDescripcion)</th>
                <th>@Html.DisplayNameFor(model => model.cColor)</th>
                <th></th>
            </tr>
        </thead>

        @foreach (var item in Model)
        {
            <tbody>
                <tr>
                    <td class="descripcion">@Html.DisplayFor(modelItem => item.cDescripcion)</td>
                    <td class="color">@Html.DisplayFor(modelItem => item.cColor)</td>
                    <td><a class="btn btn-default" id="linkEditarAfinidad" data-modal="" data-toggle="modal" href="@Url.Action("_EditarAfinidad", "Topologia", new { idProyecto = item.idProyecto, idAfinidad = item.idAfinidad })">Editar</a></td>
                </tr>
            </tbody>
        }
    </table>
</div>

<div class="modal-footer">
    <button class="btn" id="addAfinidad">Agregar Afinidad</button>
    <button class="btn" data-dismiss="modal">Cerrar</button>
</div>

<script src="~/Scripts/modalform.js"></script>

