    <div class="form-group">
        <label for="focusedinput" class="col-sm-3 control-label">
            @Html.LabelFor(model => model.idRouterDestino)
        </label>
        <div class="col-md-6">
            @Html.EditorFor(model => model.idRouterDestino, new { htmlAttributes = new { @class = "form-control" } })
